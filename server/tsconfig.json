{
  "compileOnSave": true,
  "compilerOptions": {
    "target": "es2018",
    "module": "commonjs",
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "inlineSourceMap": true,
    "noImplicitThis": true,
    "noUnusedLocals": false,
    "resolveJsonModule": true,
    "stripInternal": true,
    "pretty": true,
    "declaration": false,
    "esModuleInterop": true,
    "allowJs": false,
    "lib": ["es2018", "DOM"],
    "outDir": "dist",
    "baseUrl": "./src",
    "paths": {
      "@/*": ["./*"],
      "utils/*": ["./utils/*"],
      "drivers/*": ["./drivers/*"],
      "services/*": ["./services/*"],
    },
    "skipLibCheck": true,
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "isolatedModules": true,
  },
  "exclude": [
    "dist",
    "node_modules"
  ]
}
