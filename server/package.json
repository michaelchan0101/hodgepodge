{
  "name": "hodgepodge-server",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev:server": "cross-env NODE_HODGEPODGE_ENV=development && nodemon src/server.ts --exec ts-node",
    "dev:client": "cross-env NODE_HODGEPODGE_CLIENT_ENV=development && nodemon src/client.ts --exec ts-node",
    "build": "rm -rf dist && tsc && cp -rf src/migrations dist/migrations",
    "test": "jest --runInBand",
    "test:watch": "yarn test --watch",
    "start": "next start",
    "tsc:config": "tsc --listFiles"
  }
}
